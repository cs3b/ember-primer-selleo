<div class="fl w-50">
  {{items-filter onChange=(action (mut query))}}

  <ul class="list measure center">
    <button {{action 'toggleSort'}}>Sort By Name: {{nameSort}}</button>

    {{#each itemsSorted as |item|}}
      {{#link-to 'items.item' item.id}}
        {{items-element thing=item}}
      {{/link-to}}
      {{else}}
        Sorry, nothing here.
    {{/each}}
  </ul>
</div>
<div class="fl w-50">
  {{outlet}}
</div>